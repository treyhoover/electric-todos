{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"scripts/**/*.ts",
		"vite.config.ts",
		"drizzle.config.ts",
		"app.config.ts"
	],
	"exclude": ["node_modules", "dist"]
}

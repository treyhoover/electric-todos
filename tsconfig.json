{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@env/*": ["./env/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts",
    "vite.config.ts",
    "drizzle.config.ts",
    "app.config.ts",
    "env/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
